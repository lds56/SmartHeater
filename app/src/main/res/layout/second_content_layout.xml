                android:id="@+id/card_title3"
                android:layout_marginStart="@dimen/card_content_margin"
                android:layout_marginTop="@dimen/card_content_margin"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/card_text_size"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/card_title"
                android:text="Status"/>

            <ImageView
                android:layout_width="@dimen/card_img_size"
                android:layout_height="@dimen/card_img_size"
                android:layout_margin="@dimen/card_content_margin"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/up"/>

            <TextView
                android:id="@+id/heater_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title3"
                android:layout_marginStart="@dimen/card_content_margin"
                android:layout_marginTop="@dimen/content_gap_margin"
                android:layout_marginBottom="@dimen/card_content_margin"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/card_text_size_small"
                android:textColor="@color/card_content"
                android:fontFamily="sans-serif-medium"
                android:text="Heating"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_margin"
            android:background="@drawable/a_card_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
